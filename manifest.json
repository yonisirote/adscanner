{
  "manifest_version": 3,
  "name": "Ad Scanner",
  "version": "0.0.1",
  "description": "Scan and analyze ads on websites for security risks",
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Ad Scanner - Check ads for security risks"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
